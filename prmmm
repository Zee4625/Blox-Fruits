-- MOBILE-FRIENDLY GUI: Alone x ZeeHUB + Movement + COLLAB

-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")

-- Helper function to create UI elements
local function create(parent, class, properties)
    local obj = Instance.new(class)
    for i, v in pairs(properties or {}) do
        obj[i] = v
    end
    obj.Parent = parent
    return obj
end

-- ScreenGui
local screenGui = create(CoreGui, "ScreenGui", {Name = "AloneZeeHUB", ResetOnSpawn = false})

-- Main Frame
local mainFrame = create(screenGui, "Frame", {
    Size = UDim2.new(0.9, 0, 0.8, 0),
    Position = UDim2.new(0.05, 0, 0.1, 0),
    BackgroundColor3 = Color3.fromRGB(15, 15, 30),
    BorderSizePixel = 0,
    ClipsDescendants = true
})

-- UI Layout
local uiList = create(mainFrame, "UIListLayout", {Padding = UDim.new(0, 10), SortOrder = Enum.SortOrder.LayoutOrder})

-- Tab system
local tabs = {}
local currentTab = nil
local function createTab(name)
    local frame = create(mainFrame, "Frame", {
        Size = UDim2.new(1, 0, 1, -50),
        BackgroundTransparency = 1,
        Visible = false
    })
    tabs[name] = frame
    return frame
end

local function switchTab(name)
    for k, v in pairs(tabs) do v.Visible = false end
    if tabs[name] then
        tabs[name].Visible = true
        currentTab = tabs[name]
    end
end

-- Tab Buttons
local tabHolder = create(mainFrame, "Frame", {Size = UDim2.new(1, 0, 0, 50), BackgroundTransparency = 1})
local buttonList = create(tabHolder, "UIListLayout", {FillDirection = Enum.FillDirection.Horizontal, HorizontalAlignment = Enum.HorizontalAlignment.Center, VerticalAlignment = Enum.VerticalAlignment.Center, Padding = UDim.new(0, 10)})

local function addTabButton(name)
    local btn = create(tabHolder, "TextButton", {
        Text = name,
        BackgroundColor3 = Color3.fromRGB(50, 50, 80),
        TextColor3 = Color3.fromRGB(255, 255, 255),
        Size = UDim2.new(0, 150, 0, 40),
        Font = Enum.Font.SourceSansBold,
        TextScaled = true
    })
    btn.MouseButton1Click:Connect(function()
        switchTab(name)
    end)
end

-- Create Tabs
local movementTab = createTab("Movement")
local collabTab = createTab("COLLAB")
local collabUITab = createTab("COLLAB-UI")

addTabButton("Movement")
addTabButton("COLLAB")
addTabButton("COLLAB-UI")

switchTab("Movement") -- default

-- Character references
local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- States
local flightActive = false
local wallhackEnabled = false
local moveSpeed = 275

-- Movement Tab Buttons
local function addToggle(tab, text, callback)
    local btn = create(tab, "TextButton", {
        Text = text.." [OFF]",
        BackgroundColor3 = Color3.fromRGB(70, 70, 120),
        TextColor3 = Color3.fromRGB(255, 255, 255),
        Size = UDim2.new(0.9, 0, 0, 50),
        Font = Enum.Font.SourceSansBold,
        TextScaled = true
    })
    local state = false
    btn.MouseButton1Click:Connect(function()
        state = not state
        btn.Text = text.." ["..(state and "ON" or "OFF").."]"
        callback(state)
    end)
end

-- Flight
addToggle(movementTab, "Speed Mode", function(val)
    flightActive = val
end)

-- Wallhack
addToggle(movementTab, "Wallhack", function(val)
    wallhackEnabled = val
    for _, part in pairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CanCollide = not wallhackEnabled
        end
    end
end)

-- Jump Boost
addToggle(movementTab, "Jump Boost", function(val)
    humanoid.JumpPower = val and 200 or 50
end)

-- Flight Control
RunService.Heartbeat:Connect(function()
    if flightActive then
        local dir = Vector3.new()
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then dir += humanoidRootPart.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then dir -= humanoidRootPart.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then dir -= humanoidRootPart.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then dir += humanoidRootPart.CFrame.RightVector end
        humanoidRootPart.Velocity = dir * moveSpeed
    end
end)

-- Collab Tab Buttons
local collabScripts = {
    {"Zee and Cars.HB", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/car"},
    {"Zee and Invincible.Fly", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/FLY"},
    {"Zee and RETURN BY DEATH!", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/RETURNBYD"},
    {"Zee and Jerk.ANIM", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/JERCCC"},
    {"Zee and Wally", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/WALLY"},
    {"Zee and NarX", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/NARUTo"}
}

for _, info in pairs(collabScripts) do
    local name, url = info[1], info[2]
    local btn = create(collabTab, "TextButton", {
        Text = name,
        BackgroundColor3 = Color3.fromRGB(60, 100, 180),
        TextColor3 = Color3.fromRGB(255, 255, 255),
        Size = UDim2.new(0.9, 0, 0, 50),
        Font = Enum.Font.SourceSansBold,
        TextScaled = true
    })
    btn.MouseButton1Click:Connect(function()
        loadstring(game:HttpGetAsync(url, true))()
    end)
end

-- Collab-UI Tab Buttons
local collabUIScripts = {
    {"Zee and Piano", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/Piano"},
    {"Zee and Zombie.Anim", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/ZOMBIUUU"},
    {"Zee and R15.ANIM", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/r154"},
    {"Zee and CoolKID.HUBs", "https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/COOLKID"}
}

for _, info in pairs(collabUIScripts) do
    local name, url = info[1], info[2]
    local btn = create(collabUITab, "TextButton", {
        Text = name,
        BackgroundColor3 = Color3.fromRGB(180, 80, 100),
        TextColor3 = Color3.fromRGB(255, 255, 255),
        Size = UDim2.new(0.9, 0, 0, 50),
        Font = Enum.Font.SourceSansBold,
        TextScaled = true
    })
    btn.MouseButton1Click:Connect(function()
        loadstring(game:HttpGetAsync(url, true))()
    end)
end

-- Notification
local function notify(msg)
    local label = create(mainFrame, "TextLabel", {
        Text = msg,
        Size = UDim2.new(1, 0, 0, 40),
        BackgroundColor3 = Color3.fromRGB(0, 0, 0),
        TextColor3 = Color3.fromRGB(0, 255, 0),
        Font = Enum.Font.SourceSansBold,
        TextScaled = true,
        Position = UDim2.new(0,0,0.9,0)
    })
    task.delay(3, function()
        label:Destroy()
    end)
end

notify("Mobile GUI Loaded! Tap buttons to use features.")
