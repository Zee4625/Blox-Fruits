-- Alone x ZeeHUB GUI V2.15 - NEON RGB + MOBILE Tab üî•
-- Design Fluent RGB, fƒÉrƒÉ verificƒÉri, cu func»õii speciale »ôi suport complet pentru mobil üì±

local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

-- Fluent UI cu temƒÉ RGB neon
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local Window = Fluent:CreateWindow({
    Title = "Alone x ZeeHUB - MOBILE ",
    SubTitle = "V2.15 - Mobile + PC",
    TabWidth = 170,
    Size = UDim2.fromOffset(640, 520),
    Theme = "Aqua",
    MinimizeKey = Enum.KeyCode.LeftControl
})

-- Tabs
local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "layout" }),
    Movement = Window:AddTab({ Title = "Movement", Icon = "rocket" }),
    Utility = Window:AddTab({ Title = "Utility", Icon = "settings" }),
    Mobile = Window:AddTab({ Title = "Mobile", Icon = "smartphone" })
}

local Options = Fluent.Options

-- Func»õie helper pentru toggles
local function AddScriptToggle(tab, id, title, description, scriptURL, defaultState)
    local toggle = tab:AddToggle(id, {
        Title = "üåÄ " .. title,
        Description = description,
        Default = defaultState or false
    })

    Options[id].Args = { scriptURL = scriptURL }

    toggle:OnChanged(function()
        if Options[id].Value then
            task.spawn(function()
                pcall(function()
                    loadstring(game:HttpGet(scriptURL))()
                end)
            end)
        end
    end)
end

-- ‚úÖ Scripturi utile clasice
AddScriptToggle(Tabs.Movement, "Fly", "Fly", "X pentru activare/dezactivare", "https://raw.githubusercontent.com/gyyfyu/test2/refs/heads/main/no%20key%20system/fly.lua")
AddScriptToggle(Tabs.Utility, "Reset", "Reset Character", "Instant Reset", "https://pastebin.com/raw/BL9u7kGw")
AddScriptToggle(Tabs.Main, "Pose", "Pose", "P pentru pozi»õie animatƒÉ", "https://raw.githubusercontent.com/NotEnoughJack/localplayerscripts/refs/heads/main/pose")
AddScriptToggle(Tabs.Main, "Teleport", "Teleport", "C pentru a te teleporta √Æn fa»õƒÉ", "https://raw.githubusercontent.com/gyyfyu/test2/refs/heads/main/no%20key%20system/teleport.lua")
AddScriptToggle(Tabs.Utility, "Serverhop", "Server Hop", "SchimbƒÉ serverul automat", "https://raw.githubusercontent.com/NotEnoughJack/localplayerscripts/refs/heads/main/serverhop")

-- üì± MOBILE-ONLY: Func»õii dedicate cu controale touchscreen
local highlightToggle = Tabs.Mobile:AddToggle("Highlight", {
    Title = "‚ú® Highlight Players",
    Description = "Contur vizibil jucƒÉtori",
    Default = false
})
highlightToggle:OnChanged(function(val)
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            local char = plr.Character
            if char then
                local hl = char:FindFirstChildOfClass("Highlight") or Instance.new("Highlight", char)
                hl.Enabled = val
                hl.FillColor = Color3.fromRGB(0, 255, 255)
                hl.OutlineColor = Color3.fromRGB(255, 255, 255)
                hl.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
            end
        end
    end
end)

local speedSlider = Tabs.Mobile:AddSlider("MobileSpeed", {
    Title = "‚ö° Speed Control",
    Description = "SeteazƒÉ viteza de mers",
    Default = 16,
    Min = 16,
    Max = 100,
    Rounding = 0
})
speedSlider:OnChanged(function(val)
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
        LocalPlayer.Character.Humanoid.WalkSpeed = val
    end
end)

local flyMobile = Tabs.Mobile:AddToggle("FlyMobile", {
    Title = "üïäÔ∏è Fly (Mobile Control)",
    Description = "ZboarƒÉ ating√¢nd ecranul",
    Default = false
})
flyMobile:OnChanged(function(val)
    if val then
        loadstring(game:HttpGet("https://pastebin.com/raw/k4y1GSXz"))() -- script cu controale mobile pentru fly
    end
end)

-- üêâ Goku Mode (√Ænlocuie»ôte X-Ray)
Tabs.Mobile:AddButton({
    Title = "üî• Goku Mode",
    Description = "ActiveazƒÉ modul Goku Ultra Instinct",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Zee4625/Blox-Fruits/refs/heads/main/STAR"))()
    end
})

-- üîí DezactiveazƒÉ Anti-Cheat local dacƒÉ existƒÉ
pcall(function()
    local Client = getsenv(LocalPlayer:WaitForChild("PlayerScripts"):WaitForChild("PlayerClient"))
    if Client and Client.AntiCheatController then
        Client.AntiCheatController = nil
    end
end)

