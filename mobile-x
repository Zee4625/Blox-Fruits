-- Jack's GUI V2.12 - SCRIPT SIMPLIFICAT PENTRU TOȚI UTILIZATORII
-- Creat cu Fluent UI + funcții utile fără verificare admin sau notificări inutile

local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local LocalPlayer = Players.LocalPlayer

local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local Window = Fluent:CreateWindow({
    Title = "Jack's GUI",
    SubTitle = "V2.12",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Theme = "Amethyst",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "layout" }),
    Movement = Window:AddTab({ Title = "Movement", Icon = "rocket" }),
    Utility = Window:AddTab({ Title = "Utility", Icon = "settings" })
}

local Options = Fluent.Options

local function AddScriptToggle(tab, id, title, description, scriptURL, defaultState)
    local toggle = tab:AddToggle(id, {
        Title = title,
        Description = description,
        Default = defaultState or false
    })

    Options[id].Args = { scriptURL = scriptURL }

    toggle:OnChanged(function()
        if Options[id].Value then
            loadstring(game:HttpGet(scriptURL))()
        else
            print(title .. " disabled")
        end
    end)
end

-- EXEMPLE DE SCRIPTURI UTILE
AddScriptToggle(Tabs.Movement, "Fly", "Fly", "X to fly", "https://raw.githubusercontent.com/gyyfyu/test2/refs/heads/main/no%20key%20system/fly.lua")
AddScriptToggle(Tabs.Utility, "Reset", "Reset Character", "Instant Reset", "https://pastebin.com/raw/xxxxxxxx")
AddScriptToggle(Tabs.Main, "Pose", "Pose", "Press P to activate", "https://raw.githubusercontent.com/NotEnoughJack/localplayerscripts/refs/heads/main/pose")
AddScriptToggle(Tabs.Main, "Teleport", "Teleport", "Press C to teleport", "https://raw.githubusercontent.com/gyyfyu/test2/refs/heads/main/no%20key%20system/teleport.lua")
AddScriptToggle(Tabs.Utility, "Serverhop", "Server Hop", "Join a different server", "https://raw.githubusercontent.com/NotEnoughJack/localplayerscripts/refs/heads/main/serverhop")

-- Anti-Cheat dezactivat dacă e cazul
pcall(function()
    local AntiCheatController = getsenv(LocalPlayer.PlayerScripts:WaitForChild("PlayerClient")).AntiCheatController
    if AntiCheatController then
        AntiCheatController = nil
    end
end)

-- Sfârșit script
