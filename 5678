-- Creează ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FullScreenHi"
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Creează un TextLabel care acoperă tot ecranul
local fullScreenLabel = Instance.new("TextLabel")
fullScreenLabel.Parent = screenGui
fullScreenLabel.Size = UDim2.new(1, 0, 1, 0)  -- ocupă tot ecranul
fullScreenLabel.Position = UDim2.new(0, 0, 0, 0)
fullScreenLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- fundal negru
fullScreenLabel.BackgroundTransparency = 0.5  -- semi-transparent
fullScreenLabel.Text = "Hi! ZeeHUB is off u NIGGA BALLS! "
fullScreenLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- text alb
fullScreenLabel.TextScaled = true -- text scalabil pentru orice rezoluție
fullScreenLabel.Font = Enum.Font.GothamBold
fullScreenLabel.TextStrokeTransparency = 0.2 -- contur text
